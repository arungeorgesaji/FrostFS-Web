<div class="card">
  <div class="card-body">
    <h5 class="card-title">Live File Activity</h5>
    <div id="activity-feed" style="height: 300px; overflow-y: auto; background: #f8f9fa; border-radius: 5px; padding: 10px;">
      <% if @recent_activities.any? %>
        <% @recent_activities.each do |activity| %>
          <div class="activity-item mb-2">
            <small class="text-muted"><%= activity[:time].strftime('%H:%M:%S') %></small>
            <br>
            <%= activity[:message] %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center text-muted mt-5">
          No recent file activity
        </div>
      <% end %>
    </div>
    
    <%= button_to "Refresh Activity", root_path, 
                  method: :get, 
                  class: "btn btn-sm btn-outline-primary mt-2",
                  form: { class: "d-inline" } %>
  </div>
</div>
