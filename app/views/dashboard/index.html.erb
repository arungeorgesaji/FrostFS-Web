<div class="container">
  <h1>FrostFS Web Interface</h1>
  
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Welcome to FrostFS Web</h5>
      <p class="card-text">
        This is the web interface for managing your FrostFS filesystem.
      </p>
      
      <div class="alert alert-info">
        <strong>FrostFS Path:</strong> <%= @frostfs_path %>
      </div>
      
      <%= link_to 'View Files', files_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
