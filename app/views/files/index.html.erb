<div class="container">
  <h1>FrostFS Files</h1>
  
  <% if @error %>
    <div class="alert alert-danger">
      <strong>Error:</strong> <%= @error %>
    </div>
  <% else %>
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">File Statistics</h5>
            <p>Total files: <strong><%= @file_count %></strong></p>
            
            <% if @stats.any? %>
              <ul class="list-group">
                <% @stats.each do |state, count| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= state.to_s.humanize %>
                    <span class="badge bg-primary rounded-pill"><%= count %></span>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p class="text-muted">No files found</p>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Quick Actions</h5>
            <div class="d-grid gap-2">
              <button class="btn btn-outline-primary" disabled>View Files (Coming Soon)</button>
              <button class="btn btn-outline-secondary" disabled>Run Maintenance (Coming Soon)</button>
              <button class="btn btn-outline-info" disabled>Thermal Map (Coming Soon)</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <%= link_to 'Back to Dashboard', root_path, class: 'btn btn-secondary mt-3' %>
</div>
